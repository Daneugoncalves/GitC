        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="72*"/>
        </Grid.RowDefinitions>

        <Button x:Name="Buton1" Content="Entrar" HorizontalAlignment="Center" Margin="141.8,27,131.8,0" VerticalAlignment="Top" Width="168" Grid.Row="2" Grid.Column="1" Height="43" Click="Button_Click"/>
        <TextBox x:Name="tbxSenha" Margin="82.8,0,54.8,45" Grid.Row="1" TextWrapping="Wrap" Text="" Grid.Column="1" Height="46" VerticalAlignment="Bottom"/>
